{
  "name": "gh-tangle-release",
  "version": "0.6.2",
  "description": "Create a release and adds metadata to the IOTA Tangle",
  "main": "dist/index.js",
  "scripts": {
    "lint": "eslint src/**/*.ts tests/**/*.ts",
    "test": "eslint src/**.ts tests/**.ts && jest --coverage",
    "build-clean": "ncc build src/main.ts",
    "build": "ncc build src/main.ts",
    "precommit": "npm run build && git add dist/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iotaledger/gh-tangle-release"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "Martyn Janes <martyn.janes@iota.org>",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.4",
    "@actions/exec": "^1.0.4",
    "@actions/github": "^3.0.0",
    "@iota/converter": "^1.0.0-beta.23",
    "@iota/core": "^1.0.0-beta.24",
    "axios": "^0.19.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^3.6.1",
    "@typescript-eslint/parser": "^3.6.1",
    "@zeit/ncc": "^0.22.3",
    "eslint": "^7.5.0",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jsdoc": "^30.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-unicorn": "^21.0.0",
    "husky": "^4.2.5",
    "jest": "^26.0.1",
    "typescript": "^3.9.7"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/tangle-release.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 0,
        "functions": 0,
        "lines": 0,
        "statements": 0
      }
    }
  }
}
